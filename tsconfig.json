{
 "extends": "../../tsconfig.base.json",
 "compilerOptions": {
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "target": "ES2020",
  "types": [
   "node",
   "jest"
  ],
  "esModuleInterop": true,
  "strict": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "jsx": "preserve",
  "outDir": "./dist",
  "paths": {
   "@shared/*": [
    "../../shared/*"
   ],
   "@assets/*": [
    "./assets/*"
   ],
   "@/*": [
    "./src/*"
   ]
  }
 },
 "include": [
  "../../shared/**/*.ts",
  "../../shared/**/*.d.ts",
  "../../shared/**/*.vue",
  "src/**/*.ts",
  "src/**/*.d.ts",
  "src/**/*.vue",
  "tools/**/*.ts"
 ],
 "exclude": [
  "node_modules",
  "archives"
 ]
}